  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "electron": "run-s build pure-electron",
    "pure-electron": "electron .",
    "electron-dev": "run-p dev pure-electron-dev",
    "pure-electron-dev": "cross-env NODE_ENV=development electron .",
    "pack": "run-s build pure-pack",
    "pure-pack": "electron-builder --dir",
    "dist": "run-s build pure-dist",
    "pure-dist": "electron-builder",
    "dist:portable": "run-s build pure-dist-portable",
    "pure-dist:portable": "electron-builder --win portable"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
